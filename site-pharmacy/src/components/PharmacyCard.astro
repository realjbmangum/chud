---
interface Props {
  pharmacy: {
    id: number;
    business_name: string;
    slug: string;
    city: string;
    state: string;
    phone?: string;
    website?: string;
    ownership_type: string;
    ownership_verified: number;
    services_offered?: string; // JSON string
    verified: number;
    featured: number;
  };
}

const { pharmacy } = Astro.props;

// Parse services if available
let services: string[] = [];
if (pharmacy.services_offered) {
  try {
    services = JSON.parse(pharmacy.services_offered);
  } catch (e) {
    services = [];
  }
}

const detailUrl = `/state/${pharmacy.state.toLowerCase()}/${pharmacy.slug}`;
---

<div class="bg-white rounded-xl shadow-sm hover:shadow-md transition border border-stone-200 p-6 relative">
  {pharmacy.featured === 1 && (
    <div class="absolute top-0 right-0 bg-accent-500 text-stone-900 text-xs font-bold px-3 py-1 rounded-bl-xl rounded-tr-xl">
      Featured
    </div>
  )}

  <div class="flex items-start justify-between mb-3">
    <div class="flex-grow">
      <h3 class="text-lg font-semibold text-stone-900 mb-1">
        <a href={detailUrl} class="hover:text-primary-600 transition">
          {pharmacy.business_name}
        </a>
      </h3>
      <p class="text-sm text-stone-500">
        {pharmacy.city}, {pharmacy.state}
      </p>
    </div>

    {pharmacy.ownership_verified === 1 && (
      <div class="ml-4 flex-shrink-0">
        <div class="bg-primary-50 border border-primary-200 rounded-full px-3 py-1 flex items-center space-x-1">
          <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-xs font-medium text-primary-700">Indie Verified</span>
        </div>
      </div>
    )}
  </div>

  {services.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-4">
      {services.slice(0, 3).map((service: string) => (
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-stone-100 text-stone-700">
          {service}
        </span>
      ))}
      {services.length > 3 && (
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-stone-100 text-stone-500">
          +{services.length - 3} more
        </span>
      )}
    </div>
  )}

  <div class="flex items-center justify-between pt-4 border-t border-stone-100">
    <div class="flex space-x-4 text-sm text-stone-500">
      {pharmacy.phone && (
        <a href={`tel:${pharmacy.phone}`} class="flex items-center space-x-1 hover:text-primary-600 transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>Call</span>
        </a>
      )}
      {pharmacy.website && (
        <a href={pharmacy.website} target="_blank" rel="noopener noreferrer" class="flex items-center space-x-1 hover:text-primary-600 transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
          </svg>
          <span>Website</span>
        </a>
      )}
    </div>

    <a href={detailUrl} class="text-primary-600 hover:text-primary-700 font-medium text-sm transition">
      View Details &rarr;
    </a>
  </div>
</div>
