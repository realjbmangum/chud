---
import Layout from '../../layouts/Layout.astro'
import { regions } from '../../data/regions'

const title = "SC DMV Locations & Appointments - Road Test Alert Service"
const description = "Find SC DMV locations and get instant alerts when road test appointments open. We monitor all 65 DMV offices across 8 regions in South Carolina."

// Hub page schema
const hubSchema = {
  "@type": "WebPage",
  "name": "SC DMV Locations",
  "description": description,
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://scdmvappointments.com"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "DMV Locations",
        "item": "https://scdmvappointments.com/dmv"
      }
    ]
  }
}
---

<Layout title={title} description={description} schema={hubSchema}>
  <!-- Header -->
  <header class="bg-white border-b border-gray-200">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 text-xl font-bold" style="color: #85ccfa;">
          <img src="/scdmvappt-logo.png" alt="SC DMV Appointments" class="h-10 w-10" />
          SC DMV APPOINTMENTS
        </a>
        <nav class="flex items-center gap-6">
          <a href="/guides" class="text-sm font-medium text-gray-600 hover:text-gray-900">Guides</a>
          <a href="/guides/locations" class="text-sm font-medium text-gray-600 hover:text-gray-900">Locations</a>
          <a href="/faq" class="text-sm font-medium text-gray-600 hover:text-gray-900">FAQ</a>
          <a href="/#signup-free" class="inline-flex items-center justify-center rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white hover:bg-brand-700 transition-colors">
            Get Alerts
          </a>
        </nav>
      </div>
    </div>
  </header>

  <!-- Breadcrumb -->
  <nav class="bg-gray-50 border-b border-gray-200">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-3">
      <ol class="flex items-center gap-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-gray-700">Home</a></li>
        <li>/</li>
        <li class="text-gray-900 font-medium">DMV Locations</li>
      </ol>
    </div>
  </nav>

  <!-- Hero -->
  <section class="bg-gradient-to-b from-brand-50 to-white py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900">
          SC DMV Locations & Appointments
        </h1>
        <p class="mt-4 text-lg text-gray-600">
          We monitor all 65 SC DMV offices across 8 regions for road test appointment availability.
          Select your region to learn more or sign up for instant alerts.
        </p>
        <div class="mt-8">
          <a href="/#signup-free" class="inline-flex items-center justify-center rounded-lg bg-brand-600 px-6 py-3 text-base font-semibold text-white hover:bg-brand-700 transition-colors">
            Get My Free Alerts
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Region Grid -->
  <section class="py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 text-center mb-12">
        Choose Your Region
      </h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {Object.values(regions).map((region) => (
          <a
            href={`/dmv/${region.slug}/`}
            class="group bg-white rounded-xl p-6 border border-gray-200 hover:border-brand-500 hover:shadow-lg transition-all"
          >
            <h3 class="text-xl font-semibold text-gray-900 group-hover:text-brand-600">
              {region.name}
            </h3>
            <p class="mt-2 text-sm text-gray-500">
              {region.description}
            </p>
            <p class="mt-3 text-sm text-gray-600">
              <span class="font-medium">{region.offices.length}</span> DMV offices
            </p>
            <p class="mt-1 text-sm text-gray-500">
              Population: {region.population}
            </p>
            <div class="mt-4 text-brand-600 text-sm font-medium group-hover:underline">
              View {region.name} appointments â†’
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-16 bg-gray-50">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 text-center mb-12">
        How SC DMV Alerts Works
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 rounded-full bg-brand-100 text-brand-600 flex items-center justify-center mx-auto text-xl font-bold">
            1
          </div>
          <h3 class="mt-4 font-semibold text-gray-900">Sign Up</h3>
          <p class="mt-2 text-sm text-gray-600">
            Enter your email and select your preferred region and appointment type.
          </p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 rounded-full bg-brand-100 text-brand-600 flex items-center justify-center mx-auto text-xl font-bold">
            2
          </div>
          <h3 class="mt-4 font-semibold text-gray-900">We Monitor 24/7</h3>
          <p class="mt-2 text-sm text-gray-600">
            Our system checks all 65 SC DMV locations every 5 minutes for new openings.
          </p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 rounded-full bg-brand-100 text-brand-600 flex items-center justify-center mx-auto text-xl font-bold">
            3
          </div>
          <h3 class="mt-4 font-semibold text-gray-900">Get Notified</h3>
          <p class="mt-2 text-sm text-gray-600">
            Receive an email alert with a link to book before it fills up.
          </p>
        </div>
      </div>

      <div class="mt-12 text-center">
        <a href="/#signup-free" class="inline-flex items-center justify-center rounded-lg bg-brand-600 px-6 py-3 text-base font-semibold text-white hover:bg-brand-700 transition-colors">
          Start Free Alerts
        </a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <div class="text-gray-400 text-sm">
          &copy; 2026 SC DMV Alerts. Not affiliated with SC DMV.
        </div>
        <div class="flex gap-6 text-sm">
          <a href="/guides" class="text-gray-400 hover:text-white transition-colors">Guides</a>
          <a href="/guides/locations" class="text-gray-400 hover:text-white transition-colors">Locations</a>
          <a href="/faq" class="text-gray-400 hover:text-white transition-colors">FAQ</a>
          <a href="/privacy" class="text-gray-400 hover:text-white transition-colors">Privacy</a>
          <a href="/terms" class="text-gray-400 hover:text-white transition-colors">Terms</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
