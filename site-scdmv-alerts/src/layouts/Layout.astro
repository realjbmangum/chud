---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
  schema?: object
}

const { title, description = "Get email alerts when SC DMV appointments become available. Stop refreshing - we'll notify you.", schema } = Astro.props

// Get Mapbox token from Cloudflare runtime environment
// In SSR mode, runtime env vars are accessed via Astro.locals.runtime.env
const runtime = Astro.locals.runtime
const mapboxToken = runtime?.env?.PUBLIC_MAPBOX_ACCESS_TOKEN || runtime?.env?.MAPBOX_ACCESS_TOKEN || ''

// Base organization schema (included on all pages)
const baseSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://scdmvappointments.com/#organization",
      "name": "SC DMV Alerts",
      "url": "https://scdmvappointments.com",
      "logo": {
        "@type": "ImageObject",
        "url": "https://scdmvappointments.com/scdmvappt-logo.png"
      }
    },
    {
      "@type": "WebSite",
      "@id": "https://scdmvappointments.com/#website",
      "url": "https://scdmvappointments.com",
      "name": "SC DMV Appointments",
      "description": "Get email alerts when SC DMV road test appointments become available",
      "publisher": {
        "@id": "https://scdmvappointments.com/#organization"
      }
    }
  ]
}

// Merge page-specific schema if provided
const finalSchema = schema ? { ...baseSchema, "@graph": [...baseSchema["@graph"], ...(schema["@graph"] || [schema])] } : baseSchema
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-P08Q34CDTQ"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-P08Q34CDTQ');
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Mapbox Token (for locations map) -->
    {mapboxToken && <meta name="mapbox-token" content={mapboxToken} />}

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(finalSchema)} />
  </head>
  <body class="min-h-screen bg-white text-gray-900 font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  body {
    font-family: 'Inter', system-ui, sans-serif;
  }
</style>
